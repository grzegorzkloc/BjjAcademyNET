<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjAcademy.BjjEvents">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="AddBjjEvent" Text="Dodaj wydarzenie" Order="Primary" Activated="AddBjjEvent_Activated"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <ListView x:Name="BjjEventList"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding EventName}" Detail="{Binding EventDate}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>